@model Vidly.ViewModel.MovieFormViewModel
@{
    //ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Movie"))
{
    <div class="mt-3">
        @Html.LabelFor(m => m.Movie.Name, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control", @required = "required" })
    </div>
    <div class="mt-3">
        @Html.LabelFor(m => m.Movie.ReleaseDate, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0: d MMM yyyy}", new { @class = "form-control",@required = "required" })
    </div>
    <div class="mt-3">
        @Html.LabelFor(m => m.Movie.AddedDate, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Movie.AddedDate, "{0: d MMM yyyy}", new { @class = "form-control", @required = "required" })
    </div>
    <div class="mt-3">
        @Html.LabelFor(m => m.Movie.Stock, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Movie.Stock, new { @class = "form-control", @required = "required" })
    </div>
    <div class="mt-3">
        @Html.LabelFor(m => m.Movie.GenreId, new { @class = "form-label" })
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(@Model.Genre, "Id","Name"), new { @class = "form-control form-select", @required = "required" })
    </div>
    @Html.HiddenFor(m=>m.Movie.Id)
    <button type="submit" class="btn btn-primary mt-4">Save</button>
}
