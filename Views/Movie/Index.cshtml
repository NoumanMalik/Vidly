@model IEnumerable<Vidly.Models.Movies>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (!Model.Any())
{
    <p>We don't have any movies yet!</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Movies
                </th>
                <th>
                    Release Date
                </th>
                <th>
                    Added Date
                </th>
                <th>
                    Stock
                </th>
                <th>
                    Genre
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        <a href="/Movie/Detail/@movie.Id">@movie.Name</a>
                    </td>
                    <td>
                        @movie.ReleaseDate
                    </td>
                    <td>
                        @movie.AddedDate
                    </td>
                    <td>
                        @movie.Stock
                    </td>
                    <td>
                        @movie.Genre.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

